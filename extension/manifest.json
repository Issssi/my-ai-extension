{
    "manifest_version": 3,
    "name": "My AI Extension",
    "version": "1.0",
    "description": "Custom sidebar AI assistant.",

    "permissions": [
        "activeTab",
        "scripting"
    ],

    "action": {
        "default_title": "Toggle AI Sidebar"
    },

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],

    "web_accessible_resources": [
        {
            "resources": ["sidebar.html"],
            "matches": ["<all_urls>"]
        }
    ]
}
